<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>イベント一覧</h1>
      
        <% @events.each do |event| %>
          <div class="event-item mb-3">
            <p><%= event.event_name %></p>
            <p><%= event.date_at %></p>
            <%= link_to '詳細', event %>
            <hr>
          </div>
        <% end %>
      
    </div>
  </div>
</div>